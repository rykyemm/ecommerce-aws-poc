{
  "environments": {
    "local": {
      "api_url": "http://localhost:8000/backend/api",
      "vus": 10,
      "duration": "1m"
    },
    "development": {
      "api_url": "https://dev-ecommerce-poc.example.com/backend/api",
      "vus": 20,
      "duration": "2m"
    },
    "staging": {
      "api_url": "https://staging-ecommerce-poc.example.com/backend/api",
      "vus": 50,
      "duration": "5m"
    },
    "production": {
      "api_url": "https://ecommerce-poc.example.com/backend/api",
      "vus": 100,
      "duration": "10m"
    }
  },
  "thresholds": {
    "http_req_duration": ["p(95)<500"],
    "http_req_failed": ["rate<0.1"],
    "product_list_duration": ["p(95)<400"],
    "product_detail_duration": ["p(95)<300"],
    "product_search_duration": ["p(95)<400"],
    "product_create_duration": ["p(95)<500"]
  },
  "scenarios": {
    "standard_load": {
      "executor": "ramping-vus",
      "stages": [
        { "duration": "1m", "target": 10 },
        { "duration": "3m", "target": 10 },
        { "duration": "1m", "target": 50 },
        { "duration": "3m", "target": 50 },
        { "duration": "1m", "target": 0 }
      ]
    },
    "spike_test": {
      "executor": "ramping-vus",
      "stages": [
        { "duration": "30s", "target": 10 },
        { "duration": "1m", "target": 100 },
        { "duration": "2m", "target": 100 },
        { "duration": "30s", "target": 0 }
      ]
    },
    "stress_test": {
      "executor": "ramping-arrival-rate",
      "startRate": 10,
      "timeUnit": "1s",
      "preAllocatedVUs": 50,
      "maxVUs": 200,
      "stages": [
        { "duration": "1m", "target": 50 },
        { "duration": "3m", "target": 50 },
        { "duration": "1m", "target": 100 },
        { "duration": "3m", "target": 100 },
        { "duration": "1m", "target": 0 }
      ]
    }
  }
} 